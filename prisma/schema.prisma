generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  username  String     @unique
  password  String
  goal      String?    
  dailyLogs DailyLog[]
}

model DailyLog {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  waterIntake Float   
  mood        String  
  weight      Float    
  sleepHours  Float    
  steps       Int     
  mealQuality String  
  symptoms    String? 
  date       DateTime @default(now()) 

  @@unique([userId, date]) 
}



