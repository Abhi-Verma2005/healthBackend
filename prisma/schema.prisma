generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id              String       @id @default(uuid())
  username        String       @unique()
  email           String       @unique()
  password        String       
  Blogs           Blog[]

}

model Blog {
  id              String       @id @default(uuid())
  title           String
  desc            String
  username        String        
  user            User         @relation(fields: [username], references: [id])   
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @default(now())
  like            Like[]
  comment         Comment[]

}

model Like {
  id              String       @id @default(uuid())
  username        String      
  blogId          String
  blog            Blog         @relation(fields: [blogId], references: [id])
}


model Comment {
  id              String       @id @default(uuid())
  username        String      
  blogId          String
  blog            Blog         @relation(fields: [blogId], references: [id])
}

